    "media:update": "yarn media:pull && yarn media:up",
    "media:status": "yarn media:stack ps",
    "social:$": "echo 'Commands for the social stack'",
    "social:stack": "docker compose -f stack.social.yml -p social",
    "social:up": "yarn social:stack up -d --remove-orphans",
    "social:down": "yarn social:stack down -v --remove-orphans",
    "social:restart": "yarn social:down && yarn social:up",
    "social:pull": "yarn social:stack pull",
    "social:update": "yarn social:pull && yarn social:up",
    "social:status": "yarn social:stack ps",
    "cloud:$": "echo 'Commands for the cloud stack'",
    "cloud:stack": "docker compose -f stack.cloud.yml -p cloud",
    "cloud:up": "yarn cloud:stack up -d --remove-orphans",
