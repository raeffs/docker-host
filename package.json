    "smart:up": "yarn smart:stack up -d --remove-orphans",
    "smart:down": "yarn smart:stack down -v --remove-orphans",
    "smart:restart": "yarn smart:down && yarn smart:up",
    "smart:pull": "yarn smart:stack pull",
    "smart:update": "yarn smart:pull && yarn smart:up",
    "smart:status": "yarn smart:stack ps",
    "host:$": "echo 'Commands for the hosting stack'",
    "host:stack": "docker compose -f stack.hosting.yml -p hosting",
    "host:up": "yarn host:stack up -d --remove-orphans",
    "host:down": "yarn host:stack down -v --remove-orphans",
    "host:restart": "yarn host:down && yarn host:up",
    "host:pull": "yarn host:stack pull",
    "host:update": "yarn host:pull && yarn host:up",
