{
  "name": "docker-host",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Raphael Fleischlin <git@raefftec.ch>",
  "repository": {
    "url": "https://github.com/raeffs/docker-host.git"
  },
  "scripts": {
    "up": "npm-run-all *:up",
    "down": "npm-run-all *:down",
    "restart": "npm-run-all *:restart",
    "pull": "npm-run-all *:pull",
    "update": "npm-run-all *:update",
    "status": "docker container ls --format 'table {{.ID}}\t{{.Names}}\t{{.Status}}\t{{.Image}}'",
    "infra:$": "echo 'Commands for the infrastructure stack'",
    "infra:stack": "docker compose -f stack.infrastructure.yml -p infrastructure",
    "infra:up": "yarn infra:stack up -d --remove-orphans",
    "infra:down": "yarn infra:stack down -v --remove-orphans",
    "infra:restart": "yarn infra:down && yarn infra:up",
    "infra:pull": "yarn infra:stack pull",
    "infra:update": "yarn infra:pull && yarn infra:up",
    "infra:status": "yarn infra:stack ps",
    "mon:$": "echo 'Commands for the monitoring stack'",
    "mon:stack": "docker compose -f stack.monitoring.yml -p monitoring",
    "mon:up": "yarn mon:stack up -d --remove-orphans",
    "mon:down": "yarn mon:stack down -v --remove-orphans",
    "mon:restart": "yarn mon:down && yarn mon:up",
    "mon:pull": "yarn mon:stack pull",
    "mon:update": "yarn mon:pull && yarn mon:up",
    "mon:status": "yarn mon:stack ps",
    "auto:$": "echo 'Commands for the automation stack'",
    "auto:stack": "docker compose -f stack.automation.yml -p automation",
    "auto:up": "yarn auto:stack up -d --remove-orphans",
    "auto:down": "yarn auto:stack down -v --remove-orphans",
    "auto:restart": "yarn auto:down && yarn auto:up",
    "auto:pull": "yarn auto:stack pull",
    "auto:update": "yarn auto:pull && yarn auto:up",
    "auto:status": "yarn auto:stack ps",
    "net:$": "echo 'Commands for the networking stack'",
    "net:stack": "docker compose -f stack.networking.yml -p networking",
    "net:up": "yarn net:stack up -d --remove-orphans",
    "net:down": "yarn net:stack down -v --remove-orphans",
    "net:restart": "yarn net:down && yarn net:up",
    "net:pull": "yarn net:stack pull",
    "net:update": "yarn net:pull && yarn net:up",
    "net:status": "yarn net:stack ps",
    "devops:$": "echo 'Commands for the devops stack'",
    "devops:stack": "docker compose -f stack.devops.yml -p devops",
