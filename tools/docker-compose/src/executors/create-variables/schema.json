{
  "$schema": "http://json-schema.org/schema",
  "version": 2,
  "cli": "nx",
  "outputCapture": false,
  "type": "object",
  "properties": {
    "variables": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "optional": {
                "type": "boolean"
              },
              "defaultValue": {
                "type": "string"
              },
              "type": {
                "type": "string"
              }
            },
            "required": ["name", "description"]
          }
        ]
      }
    }
  },
  "required": []
}
