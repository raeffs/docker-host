{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 4am on sunday"]
  },
  "minimumReleaseAge": "7 days",
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "apps/mastodon",
    "apps/home-assistant",
    "apps/wireguard"
  ]
}
