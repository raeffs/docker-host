{
  "name": "miniflux-postgres",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "implicitDependencies": ["networks", "traefik"],
  "targets": {
    "create-volumes": {
      "options": {
        "volumes": ["miniflux-db"]
      }
    },
    "create-variables": {
      "options": {
        "variables": [
          {
            "name": "MINIFLUX_DOMAIN",
            "description": "Public domain name for Miniflux.",
            "defaultValue": "miniflux.${DEFAULT_DOMAIN_SUFFIX}"
          },
          {
            "name": "MINIFLUX_POSTGRES_PASSWORD",
            "description": "Password of the Miniflux PostgreSQL database.",
            "type": "password"
          },
          {
            "name": "MINIFLUX_INITIAL_USER",
            "description": "Username of the initial Miniflux user.",
            "defaultValue": "admin"
          },
          {
            "name": "MINIFLUX_INITIAL_PASSWORD",
            "description": "Password of the initial Miniflux user.",
            "type": "password"
          }
        ]
      }
    }
  }
}
